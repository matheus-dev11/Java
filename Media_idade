package trabalho;

import java.util.Locale;
import java.util.Scanner; 
public class Main {

	public static void main(String[] args) {
	
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		String nome1, nome2;
		int idade1, idade2;
		double media;
		
		System.out.print("Nome da primeira pessoa: ");
		nome1 = sc.nextLine();
		System.out.print("Idadeda primeira pessoa: ");
		idade1 = sc.nextInt();
		System.out.print("Nome da segunda pessoa: ");
		sc.nextLine();
		nome2 = sc.nextLine();
		System.out.print("Idadeda segunda pessoa: ");
		idade2 = sc.nextInt();
		
		media = (idade1 + idade2) / 2;
		
		System.out.println("A idade media de "+ nome1 +" e "+ nome2 +" eh de " + String.format("%.1f", media)+ "anos");
		
		  
		
		sc.close();
	
	}

}
